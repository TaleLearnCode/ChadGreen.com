---
pagination:
  data: presentations
  size: 1
  alias: p
permalink: '/presentations/{{ p.slug }}.html'
layout: 'layouts/base.liquid'
---

<link rel="stylesheet" href="/css/presentation-details.css">

<header>
  {% include 'components/main-nav.liquid' %}
  <h1>{{ p.title }}</h1>
</header>

<main>
  <img src="{{ p.image }}" alt="{{ p.imageAltText }}">
  <section class="overview">
    <div class="duration">{{ p.duration }}</div>
    <a
      href="{{ p.repoUrl }}"
      target="_blank"
      rel="noopener">Repo</a>
    <div class="description">{{ p.description | markdown }}</div>
  </section>

  <section class="related-presentations">
    <h3>Related Presentations</h3>
    {% if p.relatedPresentations.length > 0 %}
      <ul>
        {%- for pres in p.relatedPresentations -%}
          <li>
            <a href="/presentations/{{ pres.slug }}">{{ pres.title }}</a>
          </li>
        {%- endfor -%}
      </ul>
    {% else %}
      <p>No related Presentations</p>
    {% endif %}
  </section>

  <section class="tags">
    <h2>Tags</h2>
    <ul>
      {%- for tag in p.tags -%}
        <li>{{ tag }}</li>
      {%- endfor -%}
    </ul>
  </section>

  <section class="tabs">
    <nav title="tab navigation" id="tabsNav">
      <ul>
        <li class="selected" data-order="1">
          <button
            type="button"
            onclick="selectTab('abstract', event)"
            class="selected">
            Abstract
          </button>
        </li>
        <li data-order="2">
          <button type="button" onclick="selectTab('learningObjectives', event)">
            Objectives
          </button>
        </li>
        <li data-order="3">
          <button type="button" onclick="selectTab('engagements', event)">
            Engagements
          </button>
        </li>
        <li data-order="4">
          <button type="button" onclick="selectTab('resources', event)">
            Resources
          </button>
        </li>
      </ul>
    </nav>
    <section id="abstract" class="tab selected">
      <h2>Abstract</h2>
      <div class="tab-body">
        {{ p.abstract | markdown }}
      </div>
    </section>

    <section id="learningObjectives" class="tab">
      <h2>Learning Objectives</h2>
      <div class="tab-body">
        <ul>
          {% for lo in p.learningObjectives %}
            <li>{{ lo | markdown }}</li>
          {% endfor %}
        </ul>
      </div>
    </section>

    <section id="engagements" class="tab">
      <h2>Engagements</h2>
      <div class="tab-body engagements">
        <ul>
          {% for engagement in p.engagements %}
            <li>
              {% include "components/upcoming-engagement" %}
            </li>
          {% endfor %}
        </ul>
      </div>
    </section>

    <section id="resources" class="tab">
      <h2>Resources</h2>
      <div class="tab-body">
        {{ p.resources | markdown }}
      </div>
    </section>

  </section>
</main>

<script src="/scripts/presentation-details.js"></script>